{
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org",
      "allowBranch": ["main", "master"]
    },
    "version": {
      "allowBranch": ["main", "master"],
      "conventionalCommits": true,
      "exact": true // This ensures exact versions in dependencies
    }
  },
  "packages": ["packages/*", "packages/@svarog-ui/*"]
}
