{
  "name": "svarog-ui",
  "version": "2.1.1",
  "description": "A lightweight, vanilla JavaScript component library with theme support",
  "main": "dist/bundle.js",
  "module": "src/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "require": "./dist/bundle.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/styles.css": "./dist/styles.css",
    "./styles": "./dist/styles.css",
    "./css": "./dist/styles.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "webpack --config webpack.config.js --mode production",
    "build:storybook": "webpack --config .storybook/webpack.config.js --mode production",
    "dev": "webpack serve --config .storybook/webpack.config.js --mode development",
    "start": "npm run dev",
    "start:prod": "node server.mjs",
    "prepublishOnly": "npm run build && npm run test:size",
    "watch": "webpack --config webpack.config.js --mode development --watch",
    "lint": "eslint \"src/**/*.js\" --quiet",
    "format": "prettier --write \"src/**/*.{js,css}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "create-component": "node scripts/create-component.js",
    "ci-check": "node scripts/ci-check.js",
    "check-stories": "node scripts/check-stories.js",
    "update-stories": "node scripts/update-stories.js",
    "test:size": "npm run build && ls -lh dist/bundle.js",
    "pack:test": "npm pack && tar -tf svarog-ui-*.tgz",
    "size": "npm run build && ls -lh dist/",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.5.0",
    "babel-loader": "^10.0.0",
    "css": "^3.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-vitest": "^0.5.4",
    "express": "^4.18.2",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^16.0.0",
    "mini-css-extract-plugin": "^2.9.2",
    "prettier": "^3.5.3",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "vite": "^6.3.5",
    "vitest": "^3.1.4",
    "webpack": "^5.92.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.0.4"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/baaaaaaaaasowenyaaaaaaamamabeatsebaaah/svarog.git"
  },
  "keywords": [
    "components",
    "ui",
    "library",
    "vanilla-js",
    "theme",
    "css",
    "javascript",
    "web-components"
  ],
  "author": "Sebastian Huber",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/baaaaaaaaasowenyaaaaaaamamabeatsebaaah/svarog/issues"
  },
  "homepage": "https://github.com/baaaaaaaaasowenyaaaaaaamamabeatsebaaah/svarog#readme",
  "sideEffects": [
    "**/*.css",
    "src/styles/index.js"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
