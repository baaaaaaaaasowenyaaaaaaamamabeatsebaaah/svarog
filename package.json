{
  "name": "svarog-ui-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/@svarog-ui/*"
  ],
  "scripts": {
    "install:all": "npm install --workspaces --include-workspace-root",
    "build": "npm run build:all && npm run verify",
    "prepare:core": "node scripts/prepare-core-package.mjs",
    "build:core": "node scripts/build-core.mjs",
    "build:themes": "npm run build:theme-default && npm run build:theme-cabalou && npm run build:theme-muchandy",
    "build:theme-default": "node scripts/build-theme.mjs default",
    "build:theme-cabalou": "node scripts/build-theme.mjs cabalou",
    "build:theme-muchandy": "node scripts/build-theme.mjs muchandy",
    "build:main": "node scripts/build-main.mjs",
    "build:all": "npm run build:core && npm run build:themes && npm run build:main",
    "verify": "node scripts/verify-build.mjs",
    "rebuild": "npm run clean && npm run build:all && npm run verify",
    "build:storybook": "webpack --config .storybook/webpack.config.js --mode production",
    "dev": "webpack serve --config .storybook/webpack.config.js --mode development",
    "start": "npm run dev",
    "start:prod": "node server.mjs",
    "watch": "webpack --config webpack.config.js --mode development --watch",
    "lint": "eslint \"src/**/*.js\" --quiet",
    "format": "prettier --write \"src/**/*.{js,css}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "create-component": "node scripts/create-component.js",
    "ci-check": "node scripts/ci-check.js",
    "check-stories": "node scripts/check-stories.js",
    "update-stories": "node scripts/update-stories.js",
    "test:size": "npm run build && ls -lh dist/bundle.js",
    "pack:test": "npm pack && tar -tf svarog-ui-*.tgz",
    "size": "npm run build && ls -lh dist/",
    "cleanup:markdown": "node scripts/cleanup-markdown.mjs",
    "clean": "rm -rf dist && rm -rf packages/svarog-ui-core/dist packages/svarog-ui-core/src && rm -rf packages/@svarog-ui/*/dist && npm run cleanup:markdown",
    "clean:packages": "rm -rf packages/svarog-ui-core/dist packages/svarog-ui-core/src && rm -rf packages/@svarog-ui/*/dist",
    "publish:all": "npm run build:all && lerna publish",
    "version:all": "lerna version --conventional-commits",
    "link:local": "npm run build:all && cd packages/svarog-ui-core && npm link && cd ../svarog-ui && npm link && cd ../@svarog-ui/theme-default && npm link",
    "test:integration": "npm run build:all && node scripts/test-integration.mjs",
    "fix:peer-deps": "node scripts/fix-peer-deps.mjs",
    "preversion": "npm run fix:peer-deps"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@eslint/js": "^9.5.0",
    "babel-loader": "^9.1.3",
    "css": "^3.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "esbuild": "^0.25.5",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.2.3",
    "express": "^4.18.2",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "jsdom": "^26.1.0",
    "lerna": "^8.0.0",
    "lint-staged": "^16.0.0",
    "mini-css-extract-plugin": "^2.9.2",
    "prettier": "^3.5.3",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "vite": "^6.3.5",
    "vitest": "^3.1.4",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.0.4"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/baaaaaaaaasowenyaaaaaaamamabeatsebaaah/svarog.git"
  },
  "keywords": [
    "components",
    "ui",
    "library",
    "vanilla-js",
    "theme",
    "css",
    "javascript",
    "web-components",
    "monorepo"
  ],
  "author": "Sebastian Huber",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/baaaaaaaaasowenyaaaaaaamamabeatsebaaah/svarog/issues"
  },
  "homepage": "https://github.com/baaaaaaaaasowenyaaaaaaamamabeatsebaaah/svarog#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
